<!doctype html>
<html lang="en">

<%- include('header'); -%>

    <h2 class="title">QUIPLASH</h2>
    
    <div id="game">
        <!-- <p>{{gameState}}</p> -->

        <div v-if="connected">

            <div class="music">
                <div class="toggle-sound">
                    <button class="btn btn-success" style='background-color:rgb(20, 102, 107);  border-color: rgb(245, 245, 245); border-width: 2px; border-radius: 10px;' v-if="audio==true" v-on:click="handleMusic()">
                        MUTE
                    </button>
                    <button class="btn btn-success" style='background-color:rgb(20, 102, 107);  border-color: rgb(255, 255, 255); border-width: 2px; border-radius: 10px;' v-else v-on:click="handleMusic()">
                        UNMUTE
                    </button>
                </div>
                <audio ref="audio" src="static/game_music.mp3" loop id="audio"></audio>
            </div>
        
            <div v-if="gameState.state===false">
                <%- include('homescreen'); -%>
            </div>
            <div v-else-if="gameState.state === 0">
                <%- include('lobby'); -%>
            </div>
            <div v-else-if="gameState.state ===1 ">
                <%- include('submitPrompt'); -%>
            </div>
            <div v-else-if="gameState.state == 2 ">
                <%- include('answerPrompt') -%>
            </div>
            <div v-else-if="gameState.state == 3">
                <%- include('voting') -%>
            </div>
            <div v-else-if="gameState.state == 4">
                <%- include('revealVotes') -%>
            </div>
            <div v-else-if="gameState.state == 5">
                <%- include('roundScoreboard') -%>
            </div>
            <div v-else-if="gameState.state == 6">
                <%- include('finalScoreboard') -%>
            </div>
        </div>
        <div v-else>
            <p>connecting...</p>
        </div>
    </div>

    <%- include('footer'); -%>

</html>