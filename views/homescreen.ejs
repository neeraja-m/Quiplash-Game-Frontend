

<div v-if='gameState.state==false'>

    
      
        <div class=" text-center">
            <b-row class="mb-10"> 
                <div class="col">
            <p>Enter your details below</p>
            <input v-model="username" placeholder="Username" />
            <input v-model="password" placeholder="Password" />

                <p><button class="btn btn-lg btn-primary" @click="register">register</button></p>
                <p><button class="btn btn-lg btn-primary" @click="login">login</button></p>
                </div>
            </b-row>

            
          </div>
   
    
</div>

<div v-else>
    <p>Waiting for other players</p>
    <div class="row">
        <div v-for="player of players" class="col-sm-2 text-center">
            <div class = "player">
                <strong> Player {{player.name}} </strong>
            </div>
        </div>
    </div>
    <div v-if="me.name==1">
        <button class="btn btn-lg btn-success" @click="admin('start')">Start game</button>
    </div> 
</div>

