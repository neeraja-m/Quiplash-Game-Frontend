<div class="text-center">
    <div v-if="playerState.state===1">

    <div class="col text-center" style='padding-top:75px ; font-size:18px ; color: #5b3508; text-align: center;'>
        <p style="font-size: 27px; font-weight: bold;"> VOTE FOR YOUR FAVOURITE ANSWER </p> 
    </div>
    <div class="row" style=" margin-top: 50px; ">
        <!-- <p style="font-weight: bold;color:rgb(79, 140, 18)">PLAYERS</p> -->
            <div v-for="(prompt2,answer) in answerList" class="col-sm-3 text-center">
                <div class = "prompt">
                <p  style="color: rgb(18, 62, 77); text-align: center; font-weight: bold; font-size: 23px; "> {{prompt2}} </p>
                <p  style="color: rgb(25, 91, 113); text-align: center; font-weight: bold;font-size: 18px;"> {{answer}} </p>

                <button class="btn btn-lg btn-success" @click="vote" style='background-color:rgb(79, 140, 18); border-color: rgb(57, 102, 13); border-width: 2px;'>VOTE</button>
                </div>
            </div>
    </div>
    </div>
    <div v-else>
        <div class="col " style='padding-top:75px ; font-size:18px ; color: #5b3508; text-align: center;'>
            <p style="font-size: 27px; font-weight: bold; margin-bottom: 50px;"> Waiting for other players ... </p> 
        </div>  
    </div>
    
    <div v-if="playerState.playerNumber===0">
        <button class="btn btn-lg btn-success" @click="admin('start')" style='background-color:rgb(116, 188, 44);  border-color: rgb(93, 152, 35); border-width: 2px;'>NEXT</button>
    </div> 
</div>