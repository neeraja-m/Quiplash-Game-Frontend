<!doctype html>
<html lang="en">

<%- include('header'); -%>

    <h2 class="title">QUIPLASH</h2>

    <div id="display">
        <div v-if="connected">
            <div v-if="gameState.state===false">
                    <div class="col text-center" style='padding-top:65px ; font-size:18px ; color: #5b3508; text-align: center;'>
                        <p style="font-size: 27px; font-weight: bold;"> GAME HAS NOT STARTED YET </p>
                    </div>
            </div>
            <div v-else-if="gameState.state === 0">
                <!-- SAME AS PLAYERS SEE -->
                <%- include('lobby'); -%>
            </div>
            <div v-else-if="gameState.state ===1 ">
                <!-- DISPLAY WHICH PLAYERS HAVE FINISHED SUBMITTING -->
                <%- include('submitPromptDisplay'); -%>
            </div>
            <div v-else-if="gameState.state == 2 ">
                <!-- DISPLAY WHICH PLAYERS HAVE FINISHED SUBMITTING -->
                <%- include('answerPromptDisplay') -%>
            </div>
            <div v-else-if="gameState.state == 3">
                <!-- DISPLAY WHICH PLAYERS HAVE FINISHED VOTING -->
                <%- include('votingDisplay') -%>
            </div>
            <div v-else-if="gameState.state == 4">
                <!-- SAME AS PLAYERS SEE -->
                <%- include('revealVotes') -%>
            </div>
            <div v-else-if="gameState.state == 5">
                <!-- SAME AS PLAYERS SEE -->
                <%- include('roundScoreboard') -%>
            </div>
            <div v-else-if="gameState.state == 6">
                <!-- SAME AS PLAYERS SEE -->
                <%- include('finalScoreboard') -%>
            </div>
        </div>
        <div v-else>
            <p>connecting...</p>
        </div>
    </div>

    <%- include('displayFooter'); -%>

</html>